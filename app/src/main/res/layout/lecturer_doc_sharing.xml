<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/edit_margin_bottom"
    android:layout_marginLeft="@dimen/edit_margin_left"
    android:layout_marginRight="@dimen/edit_margin_right"
    android:layout_marginTop="@dimen/edit_margin_top"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lecture_doc_sharing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/edit_margin_top"
        android:text="@string/btn_doc_sharing"
        android:textColor="@color/Black"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/syllabuses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/syllabus_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_margin_top">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_syllabus_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_syllabus"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_large" />

                <Button
                    android:id="@+id/btn_syllabus_upload"
                    android:layout_width="@dimen/text_size_large"
                    android:layout_height="@dimen/text_size_large"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/edit_margin_right"
                    android:background="@drawable/img_icon_upload" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:id="@+id/syllabuses_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/ls_syllabuses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/lecture_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_margin_top">

        <TableRow
            android:id="@+id/lecture_note_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_lecture_note_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_lecture_note"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_large" />

                <Button
                    android:id="@+id/btn_lecture_note_upload"
                    android:layout_width="@dimen/text_size_large"
                    android:layout_height="@dimen/text_size_large"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/edit_margin_right"
                    android:background="@drawable/img_icon_upload" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:id="@+id/lecture_notes_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/ls_lecture_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </TableRow>
    </TableLayout>
</LinearLayout>