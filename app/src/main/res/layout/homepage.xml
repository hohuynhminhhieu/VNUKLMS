<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_sinhvien"
        android:src="@drawable/anh"
        android:layout_marginTop="@dimen/edit_margin_top"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/txt_sinhvien"
        android:text="HO HUYNH MINH HIEU"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/edit_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_std_info"
        android:text="@string/btn_std_info"
        android:textColor="@color/White"
        android:textSize="@dimen/text_size_large"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:layout_marginTop="@dimen/edit_margin_top"
        android:layout_marginLeft="@dimen/edit_margin_left"
        android:layout_marginRight="@dimen/edit_margin_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_lichhoc"
        android:text="@string/btn_lichhoc"
        android:textColor="@color/White"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:layout_marginTop="@dimen/edit_margin_top"
        android:layout_marginRight="@dimen/edit_margin_right"
        android:layout_marginLeft="@dimen/edit_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:layout_width=""
        android:layout_height="" />




</LinearLayout>